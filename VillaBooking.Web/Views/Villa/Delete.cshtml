@model Villa

<h1>Delete Villa</h1>

@* Display error messages if deletion fails *@

@if (!ViewData.ModelState.IsValid)
{
	<div class="alert alert-danger mt-4">
		@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
		{
			<p>@error.ErrorMessage</p>
		}
	</div>
}
<div class="container">

	<form asp-controller="Villa" asp-action="Delete" method="post" class=" row p-3 ">

		<input asp-for="Id" hidden />  @* For Entity Frame Work Tracking Purpoes *@

		<div class="mb-2">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control border shadow" readonly />
		</div>

		<div class="mb-2">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control border shadow" readonly />
		</div>

		<div class="mb-2">
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control border shadow" readonly />
		</div>

		<div class="mb-2">
			<label asp-for="Occupancy"></label>
			<input asp-for="Occupancy" class="form-control border shadow" readonly />
		</div>

		<div class="mb-2">
			<label asp-for="Sqft"></label>
			<input asp-for="Sqft" class="form-control border shadow" readonly />
		</div>

		<div class="mb-2">
			<label asp-for="ImageUrl"></label>
			<input asp-for="ImageUrl" class="form-control border shadow" readonly />
		</div>

		<div class="row mt-2">

			<div class="col-3 d-flex ">

				<button type="submit" class="btn btn-danger me-2 ">Delete</button>

				<a asp-controller="Villa" asp-action="Index" class="btn btn-primary">Cancel</a>

			</div>

		</div>

	</form>

</div>
